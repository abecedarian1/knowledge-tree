.box {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
  height: 100%;
  background-color: rgba(235, 242, 247, 0.6);
  font-size: 22px;
}
.addTool {
  font-size: 22px;
  padding-top: 10px;
}
.addTool .add-input {
  background-color: white;
  border: solid 1px;
  box-sizing: border-box;
  margin: 0 5%;
  width: 90%;
  font-size: 44rpx;
}
.todo-item-box {
  position: relative;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  overflow: auto;
}
.todo-item-box::-webkit-scrollbar {
  display: none;
}
.todo-item-box .single-line-item {
  padding: 10px;
  font-size: 44rpx;
  border-bottom: solid rgba(142, 159, 170, 0.2) 1px;
}
.todo-item-box .single-line-item .operation {
  display: none;
}
.todo-item-box .single-line-item .operation .edit,
.todo-item-box .single-line-item .operation .delete {
  margin: 0 10px;
}
.todo-item-box .single-line-item:hover {
  background-color: rgba(184, 170, 180, 0.2);
  display: block;
  border-bottom: none;
}
.todo-item-box .single-line-item:hover .operation {
  display: block;
}
.todo-item-box .single-line-item .toDoName {
  float: left;
}
.todo-item-box .single-line-item .deleteItemLine {
  text-decoration: line-through;
}
.todo-item-box .hidden {
  display: none;
}
.fixed-bar {
  position: relative;
  box-sizing: border-box;
  width: 100%;
  padding: 10px;
  font-size: 44rpx;
  background-color: rgba(142, 159, 170, 0.4);
}
.fixed-bar .sum {
  float: left;
}
.operation,
.clearButton,
.hiddenButton {
  float: right;
  margin: 0 10px;
}
.operation:hover,
.clearButton:hover,
.hiddenButton:hover {
  cursor: pointer;
}
.overlay {
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(117, 115, 115, 0.4);
  z-index: 100;
}
.overlay .dialog {
  position: relative;
  width: 700rpx;
  height: 350rpx;
  top: 300rpx;
  background-color: white;
  font-size: 36rpx;
}
.overlay .dialog .dialog-bar {
  display: flow-root;
  background-color: #bad3e1;
}
.overlay .dialog .dialog-bar .title {
  position: relative;
  float: left;
  margin: 15rpx;
}
.overlay .dialog .dialog-bar .top-cancel {
  float: right;
  margin: 15rpx;
  color: #413d3d;
}
.overlay .dialog .dialog-bar .top-cancel:hover {
  cursor: pointer;
}
.overlay .dialog .dialog-content {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  padding: 40rpx 0;
}
.overlay .dialog .dialog-content input {
  position: relative;
  width: 50%;
  height: 50rpx;
  border: solid 1px;
  padding: 0 10rpx;
  font-size: 36rpx;
}
.overlay .dialog .footer {
  position: absolute;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  width: 100%;
}
.overlay .dialog .footer .span {
  margin: 20rpx;
  border: solid #bad3e1 1px;
  padding: 10rpx;
  box-sizing: content-box;
}
.overlay .dialog .footer .footer-cancel {
  background-color: rgba(184, 170, 180, 0.3);
}
.overlay .dialog .footer .footer-cancel:hover {
  background-color: rgba(167, 192, 224, 0.4);
}
.overlay .dialog .footer .confirm {
  color: white;
  background-color: #a7c0e0;
}
.overlay .dialog .footer .confirm:hover {
  background-color: #bad3e1;
}