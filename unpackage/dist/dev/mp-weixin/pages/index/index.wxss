.banner {
  position: relative;
  width: 100%;
  height: 330rpx;
  background-color: #292e34;
  display: flex;
  justify-content: center;
  align-items: center;
}
.banner_pic {
  width: 100%;
  height: 100%;
  opacity: 0.5;
  /*支持CSS3浏览器*/
  -moz-opacity: 0.5;
}
.tittle {
  position: absolute;
  top: 19.8rpx;
  line-height: 82.5rpx;
  color: #a16760;
  font-size: 55rpx;
  font-weight: bold;
  text-shadow: 5px -5px 15px white, -5px 5px 15px gray;
}
.tittle_bg {
  position: absolute;
  top: 19.8rpx;
  width: 100%;
  height: 82.5rpx;
  background-color: #b7b5b0;
}
.search {
  position: absolute;
  bottom: 72.6rpx;
  width: 80%;
  height: 82.5rpx;
  background-color: #c8d6bd;
  border-radius: 41.25rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.search_content {
  position: relative;
  background-color: #d0dde5;
  border-radius: 28.875rpx 0 0 28.875rpx;
  width: 75%;
  height: 57.75rpx;
  border: none;
  float: left;
  font-size: 30rpx;
  box-sizing: border-box;
  padding: 0 10px;
}
.search_button {
  border-radius: 0 28.875rpx 28.875rpx 0;
  width: 25%;
  height: 57.75rpx;
  line-height: 57.75rpx;
  border: 0rpx;
  float: left;
  font-size: 30rpx;
  background-color: #a8b1bc;
}
.content {
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  width: 100%;
  padding: 10rpx;
  background-color: #eae6e2;
  /* 
    适配 a链接的点击区域为全部
  */
}
.content .navigator-wrap {
  width: 100%;
}
.content .navigator-item {
  width: 100%;
}
.content view {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1 1 28%;
  margin: 5rpx;
  color: #2c3e50;
  font-size: 35rpx;
  font-weight: 600;
}
.content view:nth-child(1) {
  background-color: #c6cccc;
}
.content view:nth-child(2) {
  background-color: #9f9b9d;
}
.content view:nth-child(3) {
  background-color: #dbc7ae;
}
.content view:nth-child(4) {
  background-color: #d3907f;
}
.content view:nth-child(5) {
  background-color: #b9a58a;
}
.content view:nth-child(6) {
  background-color: #ac8fab;
}
.content view:nth-child(7) {
  background-color: #778296;
}
.content view:nth-child(8) {
  background-color: #c69c9a;
}
.content view:nth-child(9) {
  background-color: #58626e;
}
.content view:nth-child(10) {
  background-color: #a7a8aa;
}
.content {
  min-height: calc(100vh - 28rpx - 330rpx - 90rpx - var(--388432ba));
}
.content .navigator-wrap,
.content .navigator-item {
  text-align: center;
  height: 400rpx;
  min-height: calc((100vh - 28rpx - 330rpx - 90rpx - var(--388432ba)) * 0.3);
  line-height: 400rpx;
}