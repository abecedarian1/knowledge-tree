<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bjsxt.dao.ModelListDao">

    <select id="listAll"  resultType="com.bjsxt.entity.ModelListEntity">
        select * from model_list where parentId = #{parentId}
    </select>

    <select id="singleList"  resultType="com.bjsxt.entity.ModelListEntity">
        select * from model_list
        where  id = #{id}
    </select>



    <insert id="add" parameterType="ModelListEntity" keyProperty="id">
        insert into model_list (name,url,parentId) values (#{name},#{url},#{parentId})
    </insert>

    <delete id="delete">
        delete from model_list where id = #{id}
    </delete>

    <update id="update">
        update model_list set name = #{name}, url = #{url}
        where id = #{id}
    </update>



</mapper>