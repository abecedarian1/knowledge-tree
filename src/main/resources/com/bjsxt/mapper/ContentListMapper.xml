<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bjsxt.dao.ContentListDao">



    <select id="listAll"  resultType="com.bjsxt.entity.ContentListEntity">
        select * from content_list
        where parentId = #{parentId}
    </select>

    <select id="singleList"  resultType="com.bjsxt.entity.ContentListEntity">
        select * from content_list
        where id = #{id}
    </select>

    <!-- useGeneratedKeys="true" keyProperty="id" 用来获取生成的id   -->
    <insert id="add" parameterType="ContentListEntity" useGeneratedKeys="true" keyProperty="id">
        insert into content_list (name,url,parentId) values (#{name},#{url},#{parentId})
    </insert>

    <delete id="delete">
        delete from content_list where id = #{id}
    </delete>

    <update id="update">
        update content_list set name = #{name}, url = #{url}
        where id = #{id}
    </update>

</mapper>