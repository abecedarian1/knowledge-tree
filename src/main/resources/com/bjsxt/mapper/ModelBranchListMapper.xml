<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bjsxt.dao.ModelBranchListDao">


    <select id="listAll"  resultType="com.bjsxt.entity.ModelBranchListEntity">
        select * from model_branch_list where parentId = #{parentId}
    </select>

    <select id="singleList"  resultType="com.bjsxt.entity.ModelBranchListEntity">
        select * from model_branch_list
        where id = #{id}
    </select>




    <insert id="add" parameterType="ModelBranchListEntity" keyProperty="id">
        insert into model_branch_list (name,url,parentId) values (#{name},#{url},#{parentId})
    </insert>

    <delete id="delete">
        delete from model_branch_list where id = #{id}
    </delete>

    <update id="update">
        update model_branch_list set name = #{name}, url = #{url}
        where id = #{id}
    </update>

</mapper>